<Calculator>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    # 屏幕
    TextInput:
        id: display
        text: '0'
        font_size: 32
        multiline: False
        readonly: True
        halign: 'right'
        background_color: 0.9, 0.9, 0.9, 1

    # 按钮网格
    GridLayout:
        cols: 4
        spacing: 5

        Button: 
            text: '7'
            on_press: root.append_number('7')
        Button: 
            text: '8'
            on_press: root.append_number('8')
        Button: 
            text: '9'
            on_press: root.append_number('9')
        Button: 
            text: '/'
            on_press: root.append_number('/')

        Button: 
            text: '4'
            on_press: root.append_number('4')
        Button: 
            text: '5'
            on_press: root.append_number('5')
        Button: 
            text: '6'
            on_press: root.append_number('6')
        Button: 
            text: '*'
            on_press: root.append_number('*')

        Button: 
            text: '1'
            on_press: root.append_number('1')
        Button: 
            text: '2'
            on_press: root.append_number('2')
        Button: 
            text: '3'
            on_press: root.append_number('3')
        Button: 
            text: '-'
            on_press: root.append_number('-')

        Button: 
            text: 'C'
            on_press: root.clear()
        Button: 
            text: '0'
            on_press: root.append_number('0')
        Button: 
            text: '='
            on_press: root.calculate()
        Button: 
            text: '+'
            on_press: root.append_number('+')
